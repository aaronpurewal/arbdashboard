{
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python@4",
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/cgi-bin/scan.py", "destination": "/api/scan" },
    { "source": "/cgi-bin/config.py", "destination": "/api/config" },
    { "source": "/cgi-bin/detail.py", "destination": "/api/detail" }
  ]
}
